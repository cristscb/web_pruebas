<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Usuario Asignado</th>
        </tr>
    </thead>
    <tbody>
        <% tasks.forEach(task => { %>
            <tr>
                <td><%= task.id %></td>
                <td><%= task.description %></td>
                <td><%= task.status %></td>
                <td><%= task.username %></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<h2>Panel de Administración</h2>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Usuario Asignado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% tasks.forEach(task => { %>
            <tr>
                <td><%= task.id %></td>
                <td><%= task.description %></td>
                <td><%= task.status %></td>
                <td><%= task.username %></td>
                <td>
                    <% if (task.status === 'realizada') { %>
                        <a href="/admin/complete-task/<%= task.id %>">Finalizar Tarea</a>
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

