    <h2>Panel de Administración</h2>

<p>Aquí puedes gestionar usuarios y tareas.</p>
<a href="/admin/create-user">Crear Nuevo Usuario</a><br>
<a href="/admin/create-task">Asignar Nueva Tarea</a><br>

<h3>Usuarios Activos</h3>
<table>
    <tr>
        <th>Usuario</th>
        <th>Rol</th>
        <th>Acciones</th>
    </tr>
    <% users.forEach(user => { %>
        <tr>
            <td><%= user.username %></td>
            <td><%= user.role %></td>
            <td>
                <a href="/admin/delete-user/<%= user.id %>">Eliminar</a>
            </td>
        </tr>
    <% }); %>
</table>

